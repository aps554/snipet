int powerM(int a,int b,int m = M){
    int ans = 1;
    while(b){
        int lb = (b&1);
        if(lb)    ans = (ans*a)%m;
        a = (a*a)%m;  b = b>>1;  
    }    return ans;
}
]]></content>
